<Window x:Class="mysqldatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mysqldatabase"
        mc:Ignorable="d"
        Title="MainWindow" Height="258" Width="408" Closed="Window_Closed">
    <StackPanel HorizontalAlignment="Left" Height="174" Margin="64,25,0,0" VerticalAlignment="Top" Width="274">
        <Button x:Name="add" Content="Alta" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="add_Click"/>
        <Label x:Name="labelLogin" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="textLogin"  TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label x:Name="labelPass" Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox x:Name="textPass"/>
        <Button x:Name="enter" Content="Entrar"  VerticalAlignment="Bottom"  Background="#FFE6E6E6" RenderTransformOrigin="0.5,0.5" Width="75" Margin="0,15,0,0" Click="enter_Click"/>
    </StackPanel>

</Window>
